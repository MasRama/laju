{
  "name": "hyper-app",
  "version": "1.0.9",
  "description": "",
  "main": "server.js",
  "scripts": {
    "dev": "clear && npx concurrently 'npm run tailwind-dev' 'node esbuild.watch.mjs'  'sleep 1 && npx nodemon'  ",
    "tailwind-dev": "npx tailwindcss -i ./resources/js/index.css -o ./public/style.css -w -p",
    "tailwind-build": "npx tailwindcss -i ./resources/js/index.css -o ./public/style.css -m",
    "testing-cypress-dev": "clear && concurrently 'encore dev --watch'  'npx nodemon'  ",
    "cypress": "npx cypress open",
    "copy-public": "cp -r public build",
    "copy-views": "cp -r resources/views build/views",
    "build": " node clean && node sync_version && npm run tailwind-build  && node esbuild.build.mjs  && tsc && npm run copy-public && npm run copy-views "
  },
  "author": "",
  "license": "ISC",
