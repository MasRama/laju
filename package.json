    "@inertiajs/svelte": "^2.0.0-beta.2",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.5.0",
    "concurrently": "^9.0.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "esbuild": "0.24.0",
    "esbuild-svelte": "^0.8.2",
    "esbuild-svelte-inertia": "^0.0.5",
    "googleapis": "^144.0.0",
    "hashids": "^2.3.0",
    "hyper-express": "^6.17.2",
    "knex": "^3.1.0",
    "live-directory": "^3.0.3",
    "nodemailer": "^6.9.15",
    "redis": "^4.7.0",
    "squirrelly": "^9.1.0",
    "toastify-js": "^1.12.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.7.9",
    "nodemon": "^3.1.7",
    "svelte": "^5.0.0-next.272",
    "svelte-loader": "^3.2.4",
    "tailwindcss": "^3.4.14",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
